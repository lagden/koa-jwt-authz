{
  "name": "@tadashi/koa-jwt-authz",
  "version": "1.0.0",
  "description": "Validate a JWTs scope to authorize access to an endpoint",
  "main": "lib/index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "ava -v"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lagden/koa-jwt-authz.git"
  },
  "keywords": [
    "koa",
    "middleware",
    "jwt",
    "authorization",
    "auth0"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/koa-jwt-authz/issues"
  },
  "homepage": "https://github.com/lagden/koa-jwt-authz#readme",
  "peerDependencies": {
    "koa": ">=2"
  },
  "devDependencies": {
    "@tadashi/hex-id": "1.1.1",
    "ava": "3.5.2",
    "hash-to-port": "1.1.0",
    "koa": "2.11.0",
    "koa-jwt": "3.6.0",
    "supertest": "4.0.2",
    "xo": "0.28.1"
  },
  "ava": {
    "files": [
      "test/**/*",
      "!test/helpers/**/*"
    ]
  },
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0,
      "padding-line-between-statements": 0,
      "unicorn/prevent-abbreviations": 0
    }
  }
}
